@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Product";
}

<h2>Edit Product</h2>

<form action="@Url.Action("EditProduct", "Admin")" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label for="Name" class="form-label">Product Name</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" required />
    </div>

    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input type="number" name="Price" step="0.01" class="form-control" value="@Model.Price" required />
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea name="Description" class="form-control" rows="4" required>@Model.Description</textarea>
    </div>

    <div class="mb-3">
        <label for="ImageUrl" class="form-label">Image URL</label>
        <input type="text" name="ImageUrl" class="form-control" value="@Model.ImageUrl" required />
    </div>

    <button type="submit" class="btn btn-warning">Update Product</button>
    <a href="@Url.Action("ManageProducts", "Admin")" class="btn btn-secondary">Cancel</a>
</form>
