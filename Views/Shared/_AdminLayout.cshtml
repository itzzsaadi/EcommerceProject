<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <!-- Admin Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Dashboard", "Admin")">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("ManageProducts", "Admin")">Manage Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("ManageOrders", "Admin")">Manage Orders</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("ManageUsers", "Admin")">Manage Users</a></li>
                </ul>

                <!-- Admin User Info & Logout -->
                <ul class="navbar-nav ms-auto">
                    @if (Session["AdminId"] != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link">Welcome, @Session["AdminName"]</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AdminLogout", "AdminAccount")">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AdminLogin", "AdminAccount")">Admin Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
